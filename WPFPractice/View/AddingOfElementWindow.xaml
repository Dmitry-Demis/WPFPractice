<Window x:Class="WPFPractice.View.AddingOfElementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFPractice.ViewModel"
        mc:Ignorable="d"
        Title="Добавление элемента" Height="150" Width="300"
        WindowStartupLocation="CenterScreen"
        x:Name="TestWindow">
    <Window.DataContext>
        <local:AddingOfElementWindowViewModel/>
    </Window.DataContext>
    
    <StackPanel Margin="5">
        <TextBlock Text="Введите строку:" Margin="5"/>
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="Поле должно быть не пустым" Foreground="Red"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="OК" Margin="5" Padding="5" Width="70" Command="{Binding CloseCommand}"
                   />
            <Button Content="Отмена" Margin="5" Padding="5" Width="70" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
